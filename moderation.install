/**
 * Implementation of HOOK_uninstall().
 */
function moderation_uninstall() {
  drupal_uninstall_schema('moderation');
  db_query("DELETE FROM {variable} WHERE name LIKE 'moderation_%'");
}

/**
 * Implementation of HOOK_update_N().
 */
